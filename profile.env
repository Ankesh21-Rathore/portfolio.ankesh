require('dotenv').config();
const express = require('express');
const bodyParser = require('body-parser');
const cors = require('cors');
const nodemailer = require('nodemailer');

const app = express();
const PORT = process.env.PORT || 3000;

// Middleware
app.use(cors());
app.use(bodyParser.json());

// Configure Nodemailer transporter using Gmail and environment variables
const transporter = nodemailer.createTransport({
  service: 'gmail',
  auth: {
    user: process.env.ankesh162@gmail.com
    ***********pass: process.env.Ankesh@@123
  }
});

// Contact endpoint
app.post('/contact', (req, res) => {
  const { name, email, message } = req.body;

  // Basic validation
  if (!name || !email || !message) {
    return res.status(400).json({ error: 'Please provide name, email, and message.' });
  }

  // Email options
  const mailOptions = {
    from: email, // sender address (user's email)
    to: process.env.ankesh162@gmail.com // your Gmail address to receive messages
    subject: New Contact Form Submission from ${name},
    text: `
You have a new contact form submission:

Name: ${name}
Email: ${email}
Message: ${message}
    `
  };

  // Send email
  transporter.sendMail(mailOptions, (error, info) => {
    if (error) {
      console.error('Error sending email:', error);
      return res.status(500).json({ error: 'Failed to send email. Please try again later.' });
    } else {
      console.log('Email sent:', info.response);
      return res.json({ success: true, message: 'Thank you for contacting us! Your message has been sent.' });
    }
  });
});

app.listen(PORT, () => {
  console.log(Server is running on port ${PORT});
});